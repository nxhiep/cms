<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:summer="urn:import:org.gwtbootstrap3.extras.summernote.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:v="urn:import:com.hiepnx.cms.client.view"
	xmlns:c="urn:import:com.hiepnx.cms.client.activities.category.widgets"
	>
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="create-card-dialog">
		<div class="row">
			<div class="col-xs-12 item">
				<div><label>Status: </label></div>
				<b:ListBox ui:field="statusListBox" width="300"></b:ListBox>
			</div>
			<div class="col-xs-12 item">
				<div><label>Front Text: </label></div>
				<v:MyEditor ui:field="frontText"></v:MyEditor>
			</div>
			<div class="col-xs-12 item">
				<div><label>Front Hint: </label></div>
				<v:MyEditor ui:field="frontHint"></v:MyEditor>
			</div>
			<div class="col-xs-12 item">
				<div><label>Front Image: </label></div>
				<div class="flex">
					<v:UploaderPanel ui:field="frontImageUploader"></v:UploaderPanel>
					<g:FlowPanel ui:field="imagesPanel"></g:FlowPanel>
				</div>
			</div>
			<div class="col-xs-12 item">
				<hr />
				<div><label>Choices: </label></div>
				<c:ChoicesPanel ui:field="choicesPanel"></c:ChoicesPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 